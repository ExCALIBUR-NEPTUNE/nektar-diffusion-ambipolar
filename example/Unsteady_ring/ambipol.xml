<?xml version="1.0" encoding="utf-8" ?>
<!-- Solve test case like Giorgiani G. et al. J. Comput. Phys. (2018)-->
<NEKTAR>
    <COLLECTIONS DEFAULT="auto" />
    <EXPANSIONS>
        <E COMPOSITE="C[6]" NUMMODES="8" TYPE="MODIFIED" FIELDS="n" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE" VALUE="UnsteadyDiffusion" />
            <I PROPERTY="Projection" VALUE="Continuous" />
            <I PROPERTY="DiffusionAdvancement"  VALUE="Implicit"/>
            <I PROPERTY="TimeIntegrationMethod" VALUE="IMEXOrder3" />
        </SOLVERINFO>

        <PARAMETERS>
            <P> NumSteps       = 1000 </P>
            <P> TimeStep       = 1e4  </P>
            <P> IO_InfoSteps   = 100  </P>
            <P> IO_CheckSteps  = 100  </P>
            <P> epsilon        = 1.0  </P>
            <P> k_par      = 1e6      </P>
            <P> k_perp     = 1.0      </P>
            <P> xc         = 1e4      </P>
            <P> yc         = 0.0      </P>
            <P> xs         = 5e3      </P>
            <P> ys         = 0        </P>
            <P> ls         = 250      </P>
            <P> s0         = 100.0    </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> T </V>
        </VARIABLES>
        <BOUNDARYREGIONS>
            <B ID="0"> C[5] </B>
            <B ID="1"> C[4] </B>
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <REGION REF="0"> 
                <D VAR="T"    VALUE="0.0" />
            </REGION>
            <REGION REF="1">
                <D VAR="T"    VALUE="0.0" />
            </REGION>
        </BOUNDARYCONDITIONS>-->
        
        <FUNCTION NAME="InitialConditions">
            <E VAR="T" VALUE="0.0" />
        </FUNCTION>
        
        <FUNCTION NAME="MagneticField">
            <E VAR="Bx" VALUE="(y-yc)/sqrt((x-xc)*(x-xc)+(y-yc)*(y-yc))" />
            <E VAR="By" VALUE="-(x-xc)/sqrt((x-xc)*(x-xc)+(y-yc)*(y-yc))" />
            <E VAR="Bz" VALUE="0.0" />
        </FUNCTION>

        <FUNCTION NAME="Source">
            <E VAR="T" VALUE="k_par*(exp(-((x-xc-xs)*(x-xc-xs)/(ls*ls)))*exp(-((y-yc-ys)*(y-yc-ys)/(ls*ls)))
                                - exp(-((x-xc+xs)*(x-xc+xs)/(ls*ls)))*exp(-((y-yc-ys)*(y-yc-ys)/(ls*ls))))" />
        </FUNCTION>

    </CONDITIONS>
</NEKTAR>

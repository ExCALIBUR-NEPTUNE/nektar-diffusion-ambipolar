<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <CONDITIONS>
        <PARAMETERS>
	    <P> m_e 		= 9.1096e-31	    </P>
	    <P> T_e 		= 116050	    </P>
	    <P> Z	   	= 1.0		    </P>
	    <P> A		= 1.0		    </P>
	    <P> epsilon_0	= 8.8542e-12	    </P>
	    <P> e		= 1.6022e-19	    </P>
	    <P> k_B		= 1.3806e-23	    </P>
	    <P> Lambda		= 13.0		    </P>
	    <P> theta 		= 2.0		    </P>
	    <P> N   		= 1e18 	  	    </P>
	    <P> k_par 		= 19.2 * sqrt(2 * PI^3) * (1/sqrt(m_e)) * (epsilon_0^2 / e^4) * (((k_B * T_e)^(5/2))/((Z^2) * Lambda)) </P>
            <P> k_perp 		= 0 		    </P>
	    <P> a		= 200.0             </P>
        </PARAMETERS>

        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                VALUE="SteadyDiffusion"   />
	    <I PROPERTY="Projection"            VALUE="Continuous"        />
	    <I PROPERTY="GlobalSysSoln"		VALUE="XxtMultiLevelStaticCond"/>
        </SOLVERINFO>

        <VARIABLES>
            <V ID="0"> u </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[2] </B>
            <B ID="1"> C[3] </B>
            <B ID="2"> C[4] </B>
            <B ID="3"> C[1] </B>
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <N VAR="u" VALUE="0" />
            </REGION>
            <REGION REF="1">
                <N VAR="u" VALUE="0" />
            </REGION>
            <REGION REF="2">
                <N VAR="u" VALUE="0" />
            </REGION>
	    <REGION REF="3">
                <D VAR="u" VALUE="5.0 + 5.0 * tanh(a*(y-0.13)) * tanh(a*(0.08-y))" />
            </REGION>
        </BOUNDARYCONDITIONS>

	<FUNCTION NAME="ExactSolution">
		<E VAR="u" VALUE="5.0 + 5.0 * tanh(a*(y-0.13+tan(2.0*PI/180.0)*x)) * tanh(a*(0.08-y-tan(2.0*PI/180.0)*x))"/>
        </FUNCTION>

        <FUNCTION NAME="InitialConditions">
            <E VAR="u" VALUE="0"/>
        </FUNCTION>

    </CONDITIONS>
</NEKTAR>
